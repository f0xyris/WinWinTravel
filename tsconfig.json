{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"baseUrl": ".",
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"types": ["vite-plugin-svgr/client", "vitest/globals"],
		"paths": {
			"@/*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@pages/*": ["./src/pages/*"],
			"@store/*": ["./src/store/*"],
			"@types/*": ["./src/types/*"],
			"@app-types/*": ["./src/types/*"],
			"@shared/*": ["./src/shared/*"],
			"@locales/*": ["./src/shared/i18n/locales/*"]
		},

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["custom.d.ts", "env.d.ts", "src", "setupTest.ts"],
	"exclude": ["node_modules", "tmp", ".vscode", ".husky"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
